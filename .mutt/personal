source ~/.mutt/.p

## Receive options
set imap_user = "blading82@gmail.com"
set imap_pass = $my_pw_personal
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Google Mail]/Drafts"
set record = "+Sent"

## Send options
set smtp_url = "smtps://blading82@smtp.gmail.com:465/"
set realname = "Mark"
set from = "blading82@gmail.com"
set signature = "sent using Mutt"

## Hook
account-hook $folder "set imap_user=blading82@gmail.com imap_pass=$my_pw_personal"
